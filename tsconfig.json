{
	"compilerOptions": {
	  "moduleResolution": "node",
	  "target": "ES2020",  // Target ECMAScript 2020
	  "module": "commonjs", // CommonJS module system
	  "outDir": "./build",  // Output directory for compiled files
	  "rootDir": "./src",   // Root directory of source files
	  "baseUrl": ".",       // Base URL for resolving module names
	  "paths": {
		"@/*": ["src/*"]   // Path alias for easier imports
	  },
	  "strict": true,                  // Enable strict type checking
	  "esModuleInterop": true,         // Enable interoperability between CommonJS and ES modules
	  "skipLibCheck": true,            // Skip type checking of declaration files
	  "forceConsistentCasingInFileNames": true, // Enforce consistent file casing
	  "declaration": true,             // Generate .d.ts files
	  "declarationDir": "build",       // Directory for generated declaration files
	  "declarationMap": true,          // Generate maps for declaration files
	  "emitDecoratorMetadata": true,   // Emit design-type metadata for decorated declarations
	  "experimentalDecorators": true,  // Enable experimental support for decorators
	  "sourceMap": true,               // Generate source maps
	  "strictPropertyInitialization": false // Disable strict property initialization checks (optional)
	},
	"include": ["src/**/*.ts"], // Include all TypeScript files in src
	"exclude": ["build"]         // Exclude the build directory
  }
  